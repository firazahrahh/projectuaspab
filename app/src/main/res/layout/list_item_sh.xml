<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:elevation="32dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID"
            android:textSize="21sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Judul Adaptasi"
            android:textSize="21sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_sutradara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Sutradara"
            android:textSize="21sp"/>

        <TextView
            android:id="@+id/tv_deskripsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deskripsi Adaptasi"
            android:textSize="21sp"/>

        <TextView
            android:id="@+id/tv_pemeran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pemeran"
            android:textSize="21sp"/>

        <TextView
            android:id="@+id/tv_jumlah_episode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah Episode"
            android:textSize="21sp"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>